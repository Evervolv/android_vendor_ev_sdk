<resources>
    <!-- Defaults for Secure -->

    <!-- Defaults for EVSettings.Secure.DEV_FORCE_SHOW_NAVBAR. -->
    <integer name="def_force_show_navbar">0</integer>

    <!-- Default for CMSettings.Secure.LOCKSCREEN_VISUALIZER_ENABLED -->
    <bool name="def_lockscreen_visualizer">false</bool>

    <!-- Default for EVSettings.Secure.LOCKSCREEN_MEDIA_METADATA -->
    <bool name="def_lockscreen_media_metadata">true</bool>

    <!-- Default for EVSettings.Secure.VOLUME_PANEL_ON_LEFT -->
    <bool name="def_volume_panel_on_left">false</bool>

    <!-- Defaults for System -->

    <!-- Default for EVSettings.System.STATUS_BAR_QUICK_QS_PULLDOWN
         0. Off
         1. Right
         2. Left -->
    <integer name="def_qs_quick_pulldown">0</integer>

    <!-- Default value for the battery LEDs brightness -->
    <integer name="def_battery_brightness_level">255</integer>

    <!-- Default value for the notification LEDs brightness
         when Do Not Disturb is active -->
    <integer name="def_battery_brightness_level_zen">255</integer>

    <!-- Default value for the notification LEDs brightness
         on devices equiped with configurable LED controller -->
    <integer name="def_notification_brightness_level">255</integer>

    <!-- Default value for the notification LEDs brightness
         on devices equiped with configurable LED controller
         when Do Not Disturb is active -->
    <integer name="def_notification_brightness_level_zen">255</integer>

    <!-- Default value for notification LED customization -->
    <bool name="def_notification_pulse_custom_enable">false</bool>
    <string name="def_notification_pulse_custom_value"></string>

    <!-- Default for EVSettings.System.STATUS_BAR_BATTERY_STYLE
         * 0: Display the battery an icon in portrait mode
         * 2: Display the battery as a circle
         * 3: Display the battery as a dotted circle
         * 4: Hide the battery status information
         * 5: Display the battery as plain text
         * default: 0
         -->
    <integer name="def_battery_style">0</integer>

    <!-- Default for EVSettings.System.LOCKSCREEN_ROTATION -->
    <bool name="def_lockscreen_rotation">false</bool>

    <!-- Default for EVSettings.System.EDGE_LIGHT_ENABLED -->
    <bool name="def_edge_light_enabled">true</bool>

    <!-- Default for EVSettings.System.EDGE_LIGHT_ALWAYS_TRIGGER_ON_PULSE -->
    <bool name="def_edge_light_always_trigger_on_pulse">false</bool>

    <!-- Default for EVSettings.System.EDGE_LIGHT_REPEAT_ANIMATION -->
    <bool name="def_edge_light_repeat_animation">false</bool>

    <!-- Default for EVSettings.System.EDGE_LIGHT_COLOR_MODE
         * 0: System theme
         * 1: Automatic
         * 2: Custom
         * default: 0
         -->
    <integer name="def_edge_light_color_mode">0</integer>

</resources>
